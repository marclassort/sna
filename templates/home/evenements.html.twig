{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Événements
{% endblock %}

{% block nav_class %}
	navbar-gray navbar-bg-gray
{% endblock %}

{% block body %}
	
	<style>
        figure a img {
            height: 500px !important;
            object-fit: cover;
        }
	</style>
	
	<section class="wrapper bg-soft-primary">
		<div class="container pt-10 pb-19 pt-md-14 pb-md-20 text-center">
			<div class="row">
				<div class="col-md-7 col-lg-6 col-xl-5 mx-auto">
					<h1 class="display-1 mb-3">Événements</h1>
					<p class="lead px-lg-5 px-xxl-8">Vous retrouverez ici tous nos événements à venir : conférences,
						visites guidées, visites de lieux emblématiques, événements.</p>
				</div>
			</div>
		</div>
	</section>
	<section class="wrapper bg-light">
		<div class="container pb-14 pb-md-16">
			<div class="row">
				<div class="col-lg-10 mx-auto">
					<div class="blog classic-view mt-n17">
						{% for event in events %}
							<article class="post">
								<div class="card">
									<figure class="card-img-top overlay overlay-1 hover-scale">
										<a class="link-dark">
											<img src="/uploads/{{ event.image }}" alt="{{ event.imageAlt }}" />
										</a>
										<figcaption>
											<h5 class="from-top mb-0"></h5>
										</figcaption>
									</figure>
									<div class="card-body">
										<div class="post-header">
											<div class="post-category text-line">
												<a class="hover" rel="category">{{ event.category }}</a>
											</div>
											<h2 class="post-title mt-1 mb-0">
												<a class="link-dark" >
													{{ event.title }}
												</a>
											</h2>
										</div>
										<div class="post-content">
											{{ event.content|raw }}
										</div>
									</div>
								</div>
							</article>
						{% endfor %}
				</div>
			</div>
		</div>
	</section>

{% endblock body %}
